<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trivia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EnterNameActivity"></activity>
        <activity
            android:name=".HighscoreActivity"
            android:label="@string/title_activity_highscore"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TriviaGameActivity" />
        <activity
            android:name=".LevelActivity"
            android:label="@string/title_activity_level"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>